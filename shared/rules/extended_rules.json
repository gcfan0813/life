{
  "version": "1.0",
  "description": "扩展学术验证规则库",
  "categories": {
    "physiological": {
      "name": "生理系统规则",
      "description": "健康、精力、外貌等相关规则",
      "rules": [
        {
          "id": "PHY-001",
          "name": "基础衰老曲线",
          "description": "年龄超过30岁后，健康和精力开始逐渐下降",
          "condition": "age >= 30",
          "impact": {"health": -0.5, "energy": -0.3},
          "academic_basis": "WHO衰老研究报告",
          "validation": "基于大规模流行病学调查"
        },
        {
          "id": "PHY-002",
          "name": "运动健康提升",
          "description": "定期运动可以提升健康水平和精力",
          "condition": "activity == 'exercise'",
          "impact": {"health": 2, "energy": 1.5},
          "academic_basis": "《运动医学杂志》",
          "validation": "Meta分析研究"
        },
        {
          "id": "PHY-003",
          "name": "睡眠质量影响",
          "description": "良好睡眠促进身体恢复，低质量睡眠损害健康",
          "condition": "sleep_quality == 'good'",
          "impact": {"health": 1, "energy": 3},
          "academic_basis": "《睡眠研究》期刊",
          "validation": "临床实验数据"
        },
        {
          "id": "PHY-004",
          "name": "饮食健康影响",
          "description": "均衡饮食有助于维持健康",
          "condition": "diet == 'balanced'",
          "impact": {"health": 1.5, "energy": 1},
          "academic_basis": "《营养学杂志》",
          "validation": "长期追踪研究"
        },
        {
          "id": "PHY-005",
          "name": "疾病影响",
          "description": "重大疾病会显著降低健康水平",
          "condition": "event_type == 'illness'",
          "impact": {"health": -5, "energy": -3},
          "academic_basis": "医学文献综述",
          "validation": "临床病例分析"
        }
      ]
    },
    "psychological": {
      "name": "心理系统规则",
      "description": "大五人格、情绪、韧性等相关规则",
      "rules": [
        {
          "id": "PSY-001",
          "name": "高神经质易焦虑",
          "description": "神经质得分高的人更容易经历负面情绪",
          "condition": "neuroticism > 0.6",
          "impact": {"emotional_stability": -2},
          "academic_basis": "大五人格模型研究",
          "validation": "心理学实验"
        },
        {
          "id": "PSY-002",
          "name": "宜人性与社交",
          "description": "宜人性高的人更容易建立良好人际关系",
          "condition": "agreeableness > 0.6",
          "impact": {"social_bonds": 2, "emotional_stability": 1},
          "academic_basis": "《人格与社会心理学》",
          "validation": "纵向研究"
        },
        {
          "id": "PSY-003",
          "name": "责任心与成就",
          "description": "责任心强的人更容易取得职业成功",
          "condition": "conscientiousness > 0.6",
          "impact": {"career": 2, "self_control": 1},
          "academic_basis": "职业心理学研究",
          "validation": "Meta分析"
        },
        {
          "id": "PSY-004",
          "name": "开放性与创造力",
          "description": "开放性高的人更可能有创新思维",
          "condition": "openness > 0.6",
          "impact": {"creativity": 2, "learning": 1},
          "academic_basis": "认知心理学研究",
          "validation": "实验研究"
        },
        {
          "id": "PSY-005",
          "name": "外向性与社交",
          "description": "外向的人更容易扩展社交网络",
          "condition": "extraversion > 0.6",
          "impact": {"social_bonds": 3, "popularity": 2},
          "academic_basis": "社会心理学研究",
          "validation": "问卷调查"
        }
      ]
    },
    "social": {
      "name": "社会系统规则",
      "description": "社会资本、职业、经济等相关规则",
      "rules": [
        {
          "id": "SOC-001",
          "name": "教育投资回报",
          "description": "高等教育通常带来更高的收入",
          "condition": "education_level >= 16",
          "impact": {"career": 3, "economic": 4},
          "academic_basis": "《劳动经济学》",
          "validation": "收入追踪研究"
        },
        {
          "id": "SOC-002",
          "name": "职业经验积累",
          "description": "工作经验随时间积累，提升职业竞争力",
          "condition": "work_years > 5",
          "impact": {"career": 2, "economic": 1.5},
          "academic_basis": "职业发展理论",
          "validation": "职业轨迹研究"
        },
        {
          "id": "SOC-003",
          "name": "社交网络效应",
          "description": "广泛社交可以带来更多机会",
          "condition": "social_network_size > 50",
          "impact": {"career_opportunities": 3, "information_access": 2},
          "academic_basis": "社会网络理论",
          "validation": "网络分析研究"
        },
        {
          "id": "SOC-004",
          "name": "经济危机影响",
          "description": "经济衰退期职业发展受阻",
          "condition": "economy == 'recession'",
          "impact": {"career": -2, "economic": -3},
          "academic_basis": "宏观经济研究",
          "validation": "历史数据分析"
        },
        {
          "id": "SOC-005",
          "name": "创业风险",
          "description": "创业可能带来高回报或高风险",
          "condition": "action == 'start_business'",
          "impact": {"economic": "random(-5, 10)", "career": 2},
          "academic_basis": "创业研究",
          "validation": "创业案例分析"
        }
      ]
    },
    "cognitive": {
      "name": "认知系统规则",
      "description": "知识、技能、记忆等相关规则",
      "rules": [
        {
          "id": "COG-001",
          "name": "学习提升知识",
          "description": "持续学习提升知识和技能",
          "condition": "activity == 'study'",
          "impact": {"knowledge": 2, "skills": 1.5},
          "academic_basis": "学习科学研究",
          "validation": "教育实验"
        },
        {
          "id": "COG-002",
          "name": "阅读丰富认知",
          "description": "阅读可以拓宽知识面和视野",
          "condition": "activity == 'reading'",
          "impact": {"knowledge": 1.5, "wisdom": 1},
          "academic_basis": "阅读心理学研究",
          "validation": "阅读追踪研究"
        },
        {
          "id": "COG-003",
          "name": "技能训练",
          "description": "专业技能训练提升专业能力",
          "condition": "activity == 'skill_training'",
          "impact": {"skills": 3, "career": 1},
          "academic_basis": "技能习得理论",
          "validation": "技能发展研究"
        },
        {
          "id": "COG-004",
          "name": "年龄认知衰退",
          "description": "年龄增长导致认知能力缓慢下降",
          "condition": "age > 60",
          "impact": {"memory": -1, "learning": -0.5},
          "academic_basis": "认知老年学研究",
          "validation": "纵向追踪研究"
        },
        {
          "id": "COG-005",
          "name": "认知刺激活动",
          "description": "智力挑战活动延缓认知衰退",
          "condition": "activity == 'cognitive_stimulation'",
          "impact": {"memory": 1, "wisdom": 0.5},
          "academic_basis": "神经可塑性研究",
          "validation": "临床试验"
        }
      ]
    },
    "relational": {
      "name": "关系系统规则",
      "description": "亲密度、网络效应等相关规则",
      "rules": [
        {
          "id": "REL-001",
          "name": "亲密关系建立",
          "description": "恋爱关系提升情感满足感",
          "condition": "relationship_status == 'dating'",
          "impact": {"intimacy": 3, "happiness": 2},
          "academic_basis": "依恋理论研究",
          "validation": "关系研究"
        },
        {
          "id": "REL-002",
          "name": "婚姻幸福",
          "description": "幸福婚姻提升生活满意度",
          "condition": "relationship_status == 'married' && satisfaction > 0.7",
          "impact": {"happiness": 3, "life_satisfaction": 2},
          "academic_basis": "婚姻研究",
          "validation": "长期追踪研究"
        },
        {
          "id": "REL-003",
          "name": "家庭责任",
          "description": "养育子女带来责任感和成就感",
          "condition": "has_children == true",
          "impact": {"meaning": 2, "responsibility": 3},
          "academic_basis": "家庭心理学研究",
          "validation": "家庭研究"
        },
        {
          "id": "REL-004",
          "name": "友谊支持",
          "description": "亲密友谊提供情感支持",
          "condition": "friendship_count > 5",
          "impact": {"emotional_support": 2, "happiness": 1},
          "academic_basis": "社会支持研究",
          "validation": "社会网络分析"
        },
        {
          "id": "REL-005",
          "name": "关系冲突",
          "description": "人际关系冲突影响心理健康",
          "condition": "conflict_level > 0.7",
          "impact": {"stress": 3, "happiness": -2},
          "academic_basis": "冲突研究",
          "validation": "临床研究"
        }
      ]
    },
    "age_specific": {
      "name": "年龄特定规则",
      "description": "不同年龄段特有的事件和规则",
      "rules": [
        {
          "id": "AGE-001",
          "name": "童年学习关键期",
          "description": "儿童时期是学习的关键时期",
          "condition": "age >= 6 && age <= 12",
          "impact": {"learning_ability": 2, "cognitive_baseline": 1},
          "academic_basis": "发展心理学",
          "validation": "发展研究"
        },
        {
          "id": "AGE-002",
          "name": "青春期探索",
          "description": "青少年期是身份认同和探索时期",
          "condition": "age >= 13 && age <= 19",
          "impact": {"identity_formation": 2, "self_awareness": 1},
          "academic_basis": "青春期发展研究",
          "validation": "纵向研究"
        },
        {
          "id": "AGE-003",
          "name": "职业建立期",
          "description": "20-30岁是职业发展的关键时期",
          "condition": "age >= 20 && age <= 30",
          "impact": {"career": 2, "professional_identity": 1},
          "academic_basis": "职业发展理论",
          "validation": "职业研究"
        },
        {
          "id": "AGE-004",
          "name": "中年危机",
          "description": "中年时期可能面临人生反思",
          "condition": "age >= 40 && age <= 55",
          "impact": {"self_reflection": 2, "life_satisfaction": "random(-1, 1)"},
          "academic_basis": "生命周期研究",
          "validation": "横断面研究"
        },
        {
          "id": "AGE-005",
          "name": "退休适应",
          "description": "退休需要重新适应生活",
          "condition": "age >= 60 && is_retired == true",
          "impact": {"life_satisfaction": "random(-1, 2)", "social_activity": "random(-1, 1)"},
          "academic_basis": "退休研究",
          "validation": "退休适应研究"
        }
      ]
    }
  },
  "meta_rules": [
    {
      "id": "META-001",
      "name": "维度相互影响",
      "description": "五维系统相互关联，一个维度的变化可能影响其他维度",
      "rule": "当一个维度变化超过阈值时，触发相关维度联动"
    },
    {
      "id": "META-002",
      "name": "马太效应",
      "description": "优势会累积，劣势也会累积",
      "rule": "当某维度持续正向变化时，变化加速；持续负向时，恶化加速"
    },
    {
      "id": "META-003",
      "name": "边际递减",
      "description": "同一种提升方式的效益会递减",
      "rule": "相同行为重复时，收益按0.9系数递减"
    },
    {
      "id": "META-004",
      "name": "临界点效应",
      "description": "变化达到临界点时可能发生质变",
      "rule": "当维度值低于20或高于80时，可能触发特殊事件"
    }
  ]
}
